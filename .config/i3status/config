general {
  colors = true
  interval = 5
}

order += "disk /"
order += "wireless _first_"
order += "battery all"
order += "load"
order += "tztime local"

wireless _first_ {
  format_up = "W: (%quality at %essid) %ip"
  format_down = "W: down"
}

battery all {
  format = "%status %percentage %remaining"
}

tztime local {
  format = "%I:%M %h-%d"
}

load {
  format = "%1min"
}

disk "/" {
  format = "%avail"
}
