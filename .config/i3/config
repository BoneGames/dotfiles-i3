# Set modifiers
set $alt Mod1
set $mod Mod4

# Hide window title bars
for_window [class=".*"] border pixel 0
new_window 1pixel

# Font for window titles
font pango:monospace 8

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Set alt-tab application
exec_always alttab

# Set monitor layout
exec autorandr --change

# Set background
exec_always --no-startup-id feh --bg-scale ~/.local/share/backgrounds/firewatch.jpg

# Start compton
exec --no-startup-id compton --config ~/.config/compton/compton.conf

# Start dmenu
bindsym $mod+d exec --no-startup-id i3-dmenu-desktop

# Start terminal
bindsym $mod+Return exec alacritty

# Start i3lock
bindsym $mod+slash exec i3lock-fancy

# Kill all terminals
bindsym $mod+Shift+space exec ~/.config/scripts/kill-tmux-terminals.sh

# Move focused window between monitors
bindsym $mod+Shift+less move container to output up
bindsym $mod+Shift+greater move container to output down

# Control monitor brightness
bindsym XF86MonBrightnessUp exec ~/.config/scripts/brightness.sh +
bindsym XF86MonBrightnessDown exec ~/.config/scripts/brightness.sh -

# Control audio volume
bindsym XF86AudioRaiseVolume exec amixer set Master 5%+
bindsym XF86AudioLowerVolume exec amixer set Master 5%-
bindsym XF86AudioMute exec amixer set Master toggle

# Kill focused window
bindsym $mod+q kill

# Vim bindings for focus window
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Arrow keys for focus window
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Vim bindings for move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Arrow keys for move focused window
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Merge window right in vertical orientation
bindsym $mod+$alt+h split v; focus left; move right

# Merge window left in vertical orientation
bindsym $mod+$alt+l split v; focus right; move left


# Enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle
bindsym $mod+space fullscreen toggle

# Change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Toggle tiling / floating
bindsym $mod+$alt+f floating toggle

# Change focus between tiling / floating windows
bindsym $mod+Shift+f focus mode_toggle

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# Create new workspace
bindsym $mod+n exec ~/.config/i3/new-workspace.sh

# Switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# Switch to adjacent workspaces
bindsym $mod+less workspace prev
bindsym $mod+Shift+Tab workspace prev
bindsym $mod+greater workspace next
bindsym $mod+Tab workspace next

# Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# Move workspace to adjacent screen
bindsym $mod+$alt+less move workspace to output up
bindsym $mod+$alt+greater move workspace to output down

# Reload the configuration file
bindsym $mod+Shift+c reload

# Restart i3 inplace
bindsym $mod+Shift+r restart

# Resize window
mode "resize" {
  # Vim bindings
  bindsym h resize grow width 10 px or 10 ppt
  bindsym j resize grow height 10 px or 10 ppt
  bindsym l resize shrink width 10 px or 10 ppt
  bindsym k resize shrink height 10 px or 10 ppt

  # Arrow keys
  bindsym Left resize shrink width 10 px or 10 ppt
  bindsym Down resize grow height 10 px or 10 ppt
  bindsym Up resize shrink height 10 px or 10 ppt
  bindsym Right resize grow width 10 px or 10 ppt

  # Back to normal
  bindsym Return mode "default"
  bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

bar {
  status_command i3status
}

# Window border colors
client.focused #4c7899 #285577 #ffffff #2e9ef4 #285577

# Save workspace layout and exit i3
bindsym $mod+Shift+q exec i3-resurrect save -w $ws1; \
  exec i3-resurrect save -w $ws2; \
  exec i3-resurrect save -w $ws3; \
  exec i3-resurrect save -w $ws4; \
  exec i3-resurrect save -w $ws5; \
  exec i3-resurrect save -w $ws6; \
  exec i3-msg exit

# Restore workspace layout on startup
exec i3-resurrect restore -w $ws6; \
  i3-resurrect restore -w $ws5; \
  i3-resurrect restore -w $ws4; \
  i3-resurrect restore -w $ws3; \
  i3-resurrect restore -w $ws2; \
  i3-resurrect restore -w $ws1

# i3-gaps: activate smart borders
smart_borders on

# i3-gaps: resize gaps
bindsym $mod+minus gaps inner all plus 20
bindsym $mod+equal gaps inner all minus 20

# i3-gaps: set gaps on startup
gaps inner 20
gaps inner 20
