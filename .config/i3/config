# Set modifiers
set $mod Mod4

# Hide window title bars
for_window [class=".*"] border pixel 1
new_window 1pixel

# Font for window titles
font pango:monospace 8

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Set monitor layout
exec --no-startup-id autorandr --change

# Set background
exec_always --no-startup-id feh --bg-scale ~/.local/share/backgrounds/firewatch.jpg

# Start compton
exec --no-startup-id compton --config ~/.config/compton/compton.conf

# Start autolock
exec --no-startup-id xautolock -time 3 -locker "i3lock-fancy --pixelate"

# Start workspace names
exec_always --no-startup-id exec i3-workspace-names-daemon

# Move focused window between monitors
bindsym $mod+less move container to output up
bindsym $mod+greater move container to output down

# Change monitor hardware brightness
bindsym XF86MonBrightnessUp exec ~/.config/scripts/hardware-brightness.sh +
bindsym XF86MonBrightnessDown exec ~/.config/scripts/hardware-brightness.sh -

# Change monitor software brightness
bindsym Shift+XF86MonBrightnessUp exec ~/.config/scripts/software-brightness.sh +
bindsym Shift+XF86MonBrightnessDown exec ~/.config/scripts/software-brightness.sh -

# Change audio volume
bindsym XF86AudioRaiseVolume exec amixer set Master 5%+
bindsym XF86AudioLowerVolume exec amixer set Master 5%-
bindsym XF86AudioMute exec amixer set Master toggle

# Kill focused window
bindsym $mod+q kill

# Vim bindings for focus window
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Arrow keys for focus window
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Vim bindings for move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Arrow keys for move focused window
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Merge window left in vertical orientation
bindsym $mod+9 split v; focus left; move right; move up

# Merge window right in vertical orientation
bindsym $mod+0 split v; focus right; move left

# Enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle
bindsym $mod+space fullscreen toggle

# Focus urgent window
bindsym $mod+u [urgent=latest] focus

# Change container layout (stacked, tabbed, toggle split)
bindsym $mod+e layout toggle split

# Change focus between tiling / floating windows
bindsym $mod+Shift+f focus mode_toggle

# Reload the configuration file
bindsym $mod+Escape reload

# Restart i3 inplace
bindsym $mod+Shift+r restart

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"

# Create new workspace
bindsym $mod+n exec ~/.config/i3/new-workspace.sh

# Switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8

# Switch to adjacent workspaces
bindsym $mod+Shift+Tab workspace prev
bindsym $mod+Tab workspace next

# Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# Move workspace to adjacent screen
bindsym $mod+Shift+less move workspace to output up
bindsym $mod+Shift+greater move workspace to output down

# Resize window
bindsym $mod+r mode "resize"

mode "resize" {
  # Vim bindings
  bindsym h resize grow width 10 px or 10 ppt
  bindsym j resize grow height 10 px or 10 ppt
  bindsym l resize shrink width 10 px or 10 ppt
  bindsym k resize shrink height 10 px or 10 ppt

  # Arrow keys
  bindsym Left resize shrink width 10 px or 10 ppt
  bindsym Down resize grow height 10 px or 10 ppt
  bindsym Up resize shrink height 10 px or 10 ppt
  bindsym Right resize grow width 10 px or 10 ppt

  # Back to normal
  bindsym Return mode "default"
  bindsym Escape mode "default"
}

bar {
  position bottom
  status_command i3blocks
}

# Window border colors
client.focused #4c7899 #285577 #ffffff #2e9ef4 #285577

# Save workspace layout and exit i3
bindsym $mod+Shift+q exec ~/.config/i3/save-layout.sh

# Restore workspace layout on startup
exec ~/.config/i3/restore-layout.sh

# i3-gaps: activate smart borders
smart_borders on

# i3-gaps: resize gaps
bindsym $mod+minus gaps inner all plus 20
bindsym $mod+equal gaps inner all minus 20

# i3-gaps: set gaps on startup
gaps inner 20
gaps inner 20

# Launch build desktop environment from dotfiles
bindsym $mod+F4 exec ~/.config/scripts/tmux-desktop-environment-build-dotfiles.sh

# Launch kill all containers except the desktop environment
bindsym $mod+F5 exec ~/.config/scripts/host-desktop-environment-restart.sh

# Launch kill all containers except the desktop environment
bindsym $mod+shift+F5 exec ~/repositories/sabrehagen/desktop-environment/docker/scripts/kill-all.sh

# Launch kill desktop environment tmux sessions
bindsym $mod+F6 exec ~/.config/scripts/tmux-kill-desktop-environment-shell-sessions.sh

# Launch lockscreen
bindsym $mod+slash exec i3lock-fancy --pixelate

# Launch chrome
bindsym $mod+b exec google-chrome

# Launch web chrome
bindsym $mod+shift+b exec google-chrome --app=https://chrome.jackson.cloud-computer.dev

# Launch code
bindsym $mod+c exec code

# Launch web code
bindsym $mod+shift+c exec google-chrome --app=https://code.jackson.cloud-computer.dev

# Launch dmenu
bindsym $mod+d exec i3-dmenu-desktop

# Launch web desktop
bindsym $mod+shift+d exec google-chrome --app=https://desktop.jackson.cloud-computer.dev

# Launch slack
bindsym $mod+m exec slack

# Launch web slack
bindsym $mod+shift+m exec google-chrome --app=https://slack.jackson.cloud-computer.dev

# Launch signal
bindsym $mod+y exec signal-desktop --start-in-tray

# Launch alacritty terminal
bindsym $mod+Return exec alacritty

# Launch web terminal
bindsym $mod+shift+Return exec google-chrome --app=https://terminal.jackson.cloud-computer.dev

# Launch retro terminal
bindsym $mod+Control+Return exec cool-retro-term

# Launch screenshot capture
bindsym $mod+x exec maim -s | xclip -selection clipboard -t image/png

# Launch screenshot dump
bindsym $mod+w exec xclip -o -selection clipboard > /tmp/screenshot.png
